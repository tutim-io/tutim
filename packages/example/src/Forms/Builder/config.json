  "logic": {
    "arrayFieldsLogic": {
      "fields": {
        "options": {
          "displayIf": {
            "field": "$.type",
            "operator": "in",
            "value": ["select", "radio", "multi-checkbox", "multi-select"]
          }
        },
        "defaultValue": {
          "displayIf": {
            "field": "$.type",
            "operator": "in",
            "value": ["text", "text-area", "select", "radio"]
          }
        },
        "validations": {
          "displayIf": {
            "field": "$.validate",
            "operator": "equal",
            "value": true
          }
        },
        "children": {
          "displayIf": {
            "field": "$.type",
            "operator": "in",
            "value": ["object", "array"]
          }
        }
      },
      "fields.$.children.fields": {
        "options": {
          "displayIf": {
            "field": "$.type",
            "operator": "in",
            "value": ["select", "radio", "multi-checkbox", "multi-select"]
          }
        },
        "defaultValue": {
